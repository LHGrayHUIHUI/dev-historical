# Docker Hub配置 - 历史文本项目
# Docker Hub账户信息
DOCKER_HUB_USERNAME=historicaltext
DOCKER_HUB_REGISTRY=docker.io

# 项目镜像配置
PROJECT_NAME=historical-text
VERSION_TAG=latest
BUILD_DATE=$(date +%Y%m%d)

# 镜像仓库前缀
IMAGE_PREFIX=${DOCKER_HUB_USERNAME}/${PROJECT_NAME}

# 微服务镜像名称
DATA_SOURCE_IMAGE=${IMAGE_PREFIX}-data-source:${VERSION_TAG}
DATA_COLLECTION_IMAGE=${IMAGE_PREFIX}-data-collection:${VERSION_TAG}
CORE_SERVICE_IMAGE=${IMAGE_PREFIX}-core-service:${VERSION_TAG}

# 构建配置
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1