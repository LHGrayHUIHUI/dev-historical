# 文本发布服务环境变量配置示例

# 应用基础配置
APP_NAME=Text Publishing Service
APP_VERSION=1.0.0
DEBUG=true
HOST=0.0.0.0
PORT=8080

# 数据库配置
DATABASE_URL=postgresql://postgres:password@localhost:5433/historical_text_publishing
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis配置
REDIS_URL=redis://localhost:6380/0
REDIS_MAX_CONNECTIONS=50
REDIS_SOCKET_TIMEOUT=5

# Celery配置
CELERY_BROKER_URL=redis://localhost:6380/1
CELERY_RESULT_BACKEND=redis://localhost:6380/2
CELERY_TASK_TIMEOUT=3600
CELERY_MAX_RETRIES=3

# JWT配置
JWT_SECRET_KEY=your-secret-key-here-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# 平台API配置
WEIBO_API_KEY=your-weibo-api-key
WEIBO_API_SECRET=your-weibo-api-secret
WECHAT_APP_ID=your-wechat-app-id
WECHAT_APP_SECRET=your-wechat-app-secret
DOUYIN_CLIENT_KEY=your-douyin-client-key
DOUYIN_CLIENT_SECRET=your-douyin-client-secret

# 文件上传配置
MAX_FILE_SIZE=52428800
UPLOAD_PATH=/tmp/uploads

# 发布限制配置
MAX_CONTENT_LENGTH=10000
MAX_TITLE_LENGTH=500
MAX_PLATFORMS_PER_TASK=10
MAX_TASKS_PER_USER=100

# 监控配置
ENABLE_PROMETHEUS=true
PROMETHEUS_PORT=9090
LOG_LEVEL=INFO

# 安全配置
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
RATE_LIMIT_PER_MINUTE=60