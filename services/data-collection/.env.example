# 数据采集服务环境配置
# 服务基础配置
SERVICE_NAME=data-collection-service
SERVICE_VERSION=1.0.0
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8002
SERVICE_ENVIRONMENT=development
DEBUG=true

# 安全配置
SECRET_KEY=your-super-secret-key-change-this-in-production
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=60

# 数据库配置
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/historical_text_dev
MONGODB_URL=mongodb://localhost:27017/historical_text_dev
REDIS_URL=redis://localhost:6379/0

# MinIO对象存储配置
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_NAME=historical-texts
MINIO_SECURE=false

# RabbitMQ消息队列配置
RABBITMQ_URL=amqp://admin:admin@localhost:5672/

# 文件上传配置
MAX_FILE_SIZE=104857600  # 100MB in bytes
MAX_BATCH_SIZE=50
ALLOWED_FILE_TYPES=application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document,text/plain,image/jpeg,image/png,image/tiff

# 病毒扫描配置
VIRUS_SCAN_ENABLED=true
CLAMAV_HOST=localhost
CLAMAV_PORT=3310

# OCR配置
OCR_ENABLED=true
TESSERACT_PATH=/usr/bin/tesseract
TESSERACT_LANGUAGES=chi_sim,chi_tra,eng

# 处理配置
MAX_CONCURRENT_EXTRACTIONS=5
EXTRACTION_TIMEOUT=300
RETRY_ATTEMPTS=3

# 监控配置
METRICS_ENABLED=true
PROMETHEUS_PORT=8003

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# Consul服务发现配置
CONSUL_HOST=localhost
CONSUL_PORT=8500
CONSUL_ENABLED=true

# 代理配置
PROXY_POOL_SIZE=200
PROXY_CHECK_INTERVAL=300