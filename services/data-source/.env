# 数据源服务测试环境配置

# 服务配置
SERVICE_SERVICE_NAME=data-source-service
SERVICE_SERVICE_VERSION=1.0.0
SERVICE_ENVIRONMENT=development
SERVICE_HOST=0.0.0.0
SERVICE_PORT=8000
SERVICE_WORKERS=1
SERVICE_API_PREFIX=/api/v1
SERVICE_SECRET_KEY=test-secret-key-for-development

# 数据库配置（使用Docker服务）
DB_MONGODB_URL=mongodb://localhost:27017
DB_MONGODB_DB_NAME=historical_text_test
DB_REDIS_URL=redis://localhost:6379/1

# 爬虫配置
CRAWLER_MAX_CONCURRENT_CRAWLERS=3
CRAWLER_ENABLE_PROXY=false
CRAWLER_REQUEST_DELAY_MIN=2.0
CRAWLER_REQUEST_DELAY_MAX=5.0

# 代理配置
PROXY_PROXY_POOL_SIZE=10
PROXY_PROXY_CHECK_INTERVAL=300

# 日志配置
LOG_LOG_LEVEL=DEBUG
LOG_JSON_LOGS=false

# 监控配置
MONITOR_ENABLE_METRICS=true
MONITOR_ENABLE_SERVICE_REGISTRY=false