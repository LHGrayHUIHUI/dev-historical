# OCR服务环境变量配置示例
# 无状态OCR文本识别微服务配置
# 复制此文件为.env并根据实际环境修改配置值

# 基础服务配置
OCR_SERVICE_NAME=ocr-service
OCR_SERVICE_VERSION=2.0.0
OCR_ENVIRONMENT=development  # development, testing, staging, production
OCR_DEBUG=true
OCR_API_HOST=0.0.0.0
OCR_API_PORT=8003
OCR_API_PREFIX=/api/v1
OCR_WORKERS=1

# Storage Service配置（统一数据管理）
OCR_SERVICE_STORAGE_SERVICE_URL=http://localhost:8002
OCR_SERVICE_STORAGE_SERVICE_TIMEOUT=30
OCR_SERVICE_STORAGE_SERVICE_RETRIES=3

# File Processor配置（可选，如果需要调用其他文件处理功能）
OCR_SERVICE_FILE_PROCESSOR_URL=http://localhost:8001

# OCR引擎配置
OCR_DEFAULT_ENGINE=paddleocr
OCR_DEFAULT_CONFIDENCE_THRESHOLD=0.8
OCR_DEFAULT_LANGUAGE_CODES=zh,en
OCR_MAX_FILE_SIZE=52428800  # 50MB
OCR_MAX_BATCH_SIZE=20
OCR_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png,bmp,tiff,webp
OCR_MAX_CONCURRENT_TASKS=4
OCR_TASK_TIMEOUT=300
OCR_ENABLE_PREPROCESSING=true
OCR_ENABLE_POSTPROCESSING=true

# 临时文件配置
OCR_TEMP_DIR=/tmp/ocr-service
OCR_TEMP_FILE_CLEANUP_INTERVAL=3600
OCR_TEMP_FILE_MAX_AGE=7200

# 日志配置
OCR_LOG_LEVEL=INFO
OCR_LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
OCR_LOG_FILE=
OCR_LOG_MAX_SIZE=10485760  # 10MB
OCR_LOG_BACKUP_COUNT=5
OCR_LOG_ENABLE_JSON_LOGS=false
OCR_LOG_REQUEST_ID=true
OCR_LOG_SQL_QUERIES=false

# 开发环境特定配置
# 生产环境请设置为false
OCR_DEBUG_SHOW_ERROR_DETAILS=true
OCR_DEBUG_RELOAD_ON_CHANGE=true