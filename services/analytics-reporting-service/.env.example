# 分析报告服务环境配置示例

# 基础设置
APP_NAME=Analytics Reporting Service
APP_VERSION=1.0.0
ENVIRONMENT=development
DEBUG=true
HOST=0.0.0.0
PORT=8099

# 安全配置
SECRET_KEY=analytics-secret-key-change-in-production-please

# API配置
API_V1_PREFIX=/api/v1
CORS_ORIGINS=*
RATE_LIMIT_PER_MINUTE=1000

# 日志配置
LOG_LEVEL=INFO
LOG_FORMAT=json

# PostgreSQL数据库配置
DB_POSTGRES_URL=postgresql+asyncpg://postgres:password@localhost:5439/historical_text_analytics

# InfluxDB时序数据库配置
DB_INFLUXDB_URL=http://localhost:8086
DB_INFLUXDB_TOKEN=analytics-token
DB_INFLUXDB_ORG=historical-text
DB_INFLUXDB_BUCKET=analytics-metrics

# ClickHouse OLAP数据库配置
DB_CLICKHOUSE_HOST=localhost
DB_CLICKHOUSE_PORT=9000
DB_CLICKHOUSE_DATABASE=analytics
DB_CLICKHOUSE_USER=default
DB_CLICKHOUSE_PASSWORD=

# Redis缓存配置
DB_REDIS_URL=redis://localhost:6383/6

# 机器学习配置
ML_MODEL_CACHE_DIR=./models
ML_ANOMALY_DETECTION_THRESHOLD=0.95
ML_FORECAST_DAYS=30
ML_MIN_TRAINING_SAMPLES=100
ML_FEATURE_WINDOW_DAYS=30

# 外部服务配置
SERVICE_STORAGE_SERVICE_URL=http://localhost:8002
SERVICE_CONTENT_PUBLISHING_URL=http://localhost:8094
SERVICE_ACCOUNT_MANAGEMENT_URL=http://localhost:8091
SERVICE_SCHEDULING_SERVICE_URL=http://localhost:8095

# Celery配置
CELERY_BROKER_URL=redis://localhost:6383/7
CELERY_RESULT_BACKEND=redis://localhost:6383/8
CELERY_TASK_SERIALIZER=json
CELERY_RESULT_SERIALIZER=json
CELERY_ACCEPT_CONTENT=json
CELERY_WORKER_CONCURRENCY=4

# 报告配置
REPORT_REPORT_STORAGE_PATH=./reports
REPORT_REPORT_CACHE_HOURS=24
REPORT_MAX_EXPORT_ROWS=100000
REPORT_CHART_WIDTH=800
REPORT_CHART_HEIGHT=600